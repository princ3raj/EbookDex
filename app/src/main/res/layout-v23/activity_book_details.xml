<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:background="#FFDD0D"
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <TextView
            android:id="@+id/toolbar_title"
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
            android:layout_width="wrap_content"
            app:layout_scrollFlags="scroll|enterAlways"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Ebook Dex"
            android:textColor="#000" />

        <ImageView
            android:id="@+id/search_icon"
            android:layout_marginEnd="16dp"
            android:layout_gravity="end"
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:src="@drawable/search" />


    </androidx.appcompat.widget.Toolbar>

    <View
        android:id="@+id/horizontal_line"
        android:layout_width="120dp"
        android:layout_height="1dp"
        android:layout_marginLeft="150dp"
        android:layout_marginRight="150dp"
        android:layout_marginTop="54dp"
        android:background="@android:color/darker_gray"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:id="@+id/Linear_layout_1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/relative_layout_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="56dp"
            android:background="#FFDD0D">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="100dp"
                android:layout_height="130dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="100dp"
                android:background="@drawable/selected_image_shadow"
                android:elevation="30dp"
                android:src="@drawable/book_1" />

            <TextView
                android:id="@+id/title_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/buy_it_button"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="21dp"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="72dp"
                android:layout_marginBottom="129dp"
                android:layout_toEndOf="@+id/imageView"
                android:text="Logo Design Love:\nA Guide to Creating\nIconic Brand Identities"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/author_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/title_text_view"
                android:layout_alignBottom="@+id/page_count"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="23dp"
                android:layout_marginTop="74dp"
                android:layout_marginEnd="188dp"
                android:layout_marginBottom="67dp"
                android:layout_toEndOf="@+id/imageView"
                android:fontFamily="sans-serif-thin"
                android:text="by David Airey" />

            <TextView
                android:id="@+id/price_tag"
                android:layout_width="52dp"
                android:layout_height="25dp"
                android:layout_alignStart="@+id/imageView"
                android:layout_alignTop="@+id/imageView"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="123dp"
                android:layout_marginTop="115dp"
                android:layout_marginEnd="219dp"
                android:layout_toEndOf="@+id/imageView"
                android:text="$9.99"
                android:textColor="#000000"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/rating_bar"
                android:layout_width="82dp"
                android:layout_height="14dp"
                android:layout_alignStart="@+id/price_tag"
                android:layout_alignTop="@+id/title_text_view"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="62dp"
                android:layout_marginTop="117dp"
                android:layout_marginEnd="128dp"
                android:src="@drawable/stars" />

            <TextView
                android:id="@+id/page_count"
                android:layout_width="66dp"
                android:layout_height="25dp"
                android:layout_marginStart="37dp"
                android:layout_marginTop="170dp"
                android:fontFamily="sans-serif-thin"
                android:text="216 pages" />

            <Button
                android:id="@+id/buy_it_button"
                android:layout_width="124dp"
                android:layout_height="36dp"
                android:layout_alignBottom="@+id/page_count"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="178dp"
                android:layout_marginEnd="52dp"
                android:layout_marginBottom="-19dp"
                android:background="@drawable/custom_button"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:gravity="center_vertical|center_horizontal"
                android:text="BUY IT\nNOW"
                android:textColor="#fff" />


        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_layout_2"
        android:layout_marginTop="300dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">






        <TextView
            android:id="@+id/textView_1"
            android:layout_margin="20dp"
            android:text="@string/text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </LinearLayout>












</RelativeLayout>